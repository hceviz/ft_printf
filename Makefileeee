NAME = libftprintf.a
AR = ar rcs
CC = cc
CFLAGS = -Werror -Wextra -Wall -Ilibft
LIBFT_DIR = ./libft
LIBFT = $(LIBFT_DIR)/libft.a
SRC = ft_printf.c ft_printf_utils.c
OBJ = $(SRC:.c=.o)


all: $(NAME)

$(LIBFT): 
	make -C $(LIBFT_DIR)

$(NAME):  $(OBJ) $(LIBFT)
	$(AR) $(NAME) $(OBJ) $(LIBFT)

%.o : %.c
	$(CC) $(CFLAGS) -c $< -o $@


clean : 
	make clean -C $(LIBFT_DIR)
	rm -f $(OBJ)


fclean : clean
	make fclean -C $(LIBFT_DIR)
	rm -f $(NAME)

re : fclean all

.PHONY : all clean fclean re